extends layout

block content
  .container
    .page-header.text-center
      h1
        span.fa.fa-anchor
        |  Profile Page
      a.btn.btn-default.btn-sm(href='/logout') Logout
    .row
      .col-sm-12
        .well
          h3
            span.fa.fa-user
            |  Your personal information
          if (user.email)
            p
              strong id
              | : user._id
              br
              strong email
              | : user.email
              br
              strong password
              | : user.password
            a.btn.btn-default(href='/unlink/local') Unlink
          else
            a.btn.btn-default(href='/connect/local') Connect Local
