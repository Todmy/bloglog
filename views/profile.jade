extends layout

block content
  .container
    .page-header.text-center
      h1
        span.fa.fa-anchor
        |  Profile Page
      a.btn.btn-default.btn-sm(href='/logout') Logout
    .row
      .col-sm-12
        .well
          h3
            span.fa.fa-user
            |  #{user.name ? user.name : '*Nobody*'}, it is your personal information:
          if (user.username)
            p
              strong id
              | : #{user._id}
              br
              strong username
              | : #{user.username}
              br
              strong password (encoded)
              | : #{user.password}
              br
              strong is Admin
              | : #{user.admin}
